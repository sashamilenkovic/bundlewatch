{
  "name": "bundlewatch",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "engines": {
    "node": ">=24.0.0"
  },
  "scripts": {
    "dev": "pnpm --filter @bundlewatch/core dev",
    "build": "pnpm -r build",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "example:vite": "pnpm --filter example-vite dev",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.1",
    "@semantic-release/npm": "^13.1.1",
    "@types/node": "^24.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "semantic-release": "^25.0.1",
    "typescript": "~5.9.3",
    "vite": "^6.0.3",
    "vitest": "^2.1.8"
  }
}
